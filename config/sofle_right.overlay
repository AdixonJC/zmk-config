/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: led_strip {
        compatible = "zmk,underglow";
        label = "Underglow_Right";

        gpios = <&gpio0 6 0>;   // Pin P0.06, ajústalo si usas otro
        chain-length = <29>;    // Número de LEDs reales
        color-mapping = <0 1 2>;
    };
};
