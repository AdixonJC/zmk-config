/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: ws2812 {
        compatible = "zmk,underglow";
        label = "Underglow";

        chain-length = <29>;
        color-mapping = <LED_COLOR_ID_RGB>;

        /* Sofle RGB usa el pin F4 (Pro Micro D5 â†’ P0.24) para DIN */
        data-gpios = <&pro_micro 5 GPIO_ACTIVE_HIGH>;
    };
};
