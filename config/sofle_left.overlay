/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: underglow {
        compatible = "zmk,underglow";
        label = "Underglow";

        gpios = <&gpio0 6 0>;   /* Ajusta el pin DIN según tu PCB */
        chain-length = <29>;    /* Número de LEDs */
        color-mapping = <0 1 2>;
        status = "okay";
    };
};
