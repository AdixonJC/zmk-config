/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: led_strip {
        compatible = "zmk,underglow";
        label = "Underglow_Left";

        gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;

        chain-length = <29>;   /* 29 LEDs en el lado izquierdo */
        color-mapping = <LED_COLOR_ID_RGB>;
    };
};
