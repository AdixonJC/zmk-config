/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: ws2812 {
        compatible = "zmk,underglow";
        label = "Underglow_Left";

        chain-length = <29>;
        color-mapping = <LED_COLOR_ID_RGB>;

        /* Sofle RGB: DIN va al pin F4 del Pro Micro â†’ en nRF52840 = P0.06 */
        data-gpios = <&gpio0 0x06 GPIO_ACTIVE_HIGH>;
    };
};
