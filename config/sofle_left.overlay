/ {
    chosen {
        zmk,underglow = &ws2812;
    };

    ws2812: ws2812 {
        compatible = "zmk,ws2812";
        label = "WS2812";
        gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;

        /* Diferentes variantes posibles */
        chain-length = <29>;
        zmk,chain-length = <29>;
        led-chain-length = <29>;
    };
};
