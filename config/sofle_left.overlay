/ {
    chosen {
        zmk,underglow = &underglow;
    };

    underglow: led_strip {
        compatible = "zmk,underglow";
        label = "Underglow_Left";

        /* Pin F4 del Pro Micro â†’ index 6 en &pro_micro */
        gpios = <&pro_micro 6 GPIO_ACTIVE_HIGH>;

        chain-length = <29>;
        color-mapping = <LED_COLOR_ID_RGB>;
    };
};
